{
    "version": 1,
    "disable_existing_loggers": true,
    "formatters": {
        "simple": {
            "format": "%(name)s:%(lineno)s - %(levelname)s - %(message)s"
        }
    },

    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "level": "DEBUG",
            "formatter": "simple",
            "stream": "ext://sys.stdout"
        }
    },

    "loggers": {
        "module1.logging_module1": {
            "level": "INFO",
            "handlers": ["console"],
            "propagate": false
        }
    },

    "root": {
        "level": "WARN",
        "handlers": ["console"]
    }
}
